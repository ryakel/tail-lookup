{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "description": "Renovate Bot configuration for tail-lookup - monitors Python dependencies and Docker images",
  "timezone": "UTC",
  "schedule": [
    "before 3am on Monday"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assignees": [
    "ryakel"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Python dependencies in requirements.txt",
      "matchManagers": ["pip_requirements"],
      "matchFileNames": ["requirements.txt"],
      "labels": ["python"],
      "commitMessagePrefix": "chore(deps):",
      "semanticCommitScope": "python"
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "labels": ["docker"],
      "commitMessagePrefix": "chore(docker):"
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "labels": ["github-actions"],
      "commitMessagePrefix": "ci:"
    }
  ]
}
